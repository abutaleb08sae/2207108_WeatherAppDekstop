<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<?import javafx.geometry.Insets?>

<HBox prefHeight="800.0" prefWidth="1200.0" styleClass="root" stylesheets="@style.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.weatherapp.HelloController">
    <VBox prefWidth="200" spacing="15" styleClass="sidebar">
        <padding><Insets bottom="20" left="20" right="20" top="40" /></padding>
        <Label style="-fx-text-fill: white; -fx-font-size: 22; -fx-font-weight: bold;" text="WeatherApp" />
        <Region prefHeight="20" />
        <Button maxWidth="Infinity" styleClass="nav-button-active" text="â˜€ï¸ Current" />
        <Button maxWidth="Infinity" styleClass="nav-button" text="ðŸ“… Hourly" />
        <Button maxWidth="Infinity" styleClass="nav-button" text="ðŸ“Š Details" />
        <Button maxWidth="Infinity" styleClass="nav-button" text="ðŸ“ Maps" />
        <Button maxWidth="Infinity" styleClass="nav-button" text="ðŸ“… Monthly" />
        <Button maxWidth="Infinity" styleClass="nav-button" text="ðŸ“ˆ Trends" />
    </VBox>

    <VBox spacing="20" styleClass="main-content" HBox.hgrow="ALWAYS">
        <padding><Insets bottom="20" left="30" right="30" top="20" /></padding>

        <HBox alignment="CENTER_LEFT" spacing="10">
            <TextField fx:id="searchField" promptText="Enter city (e.g. Dhaka, London)" styleClass="search-field" HBox.hgrow="ALWAYS" />
            <Button onAction="#handleSearch" styleClass="search-button" text="Search" />
        </HBox>

        <VBox spacing="15" styleClass="weather-card">
            <Label fx:id="locationLabel" style="-fx-text-fill: #A09EBC; -fx-font-size: 18;" text="Search a city to see weather" />
            <HBox alignment="CENTER_LEFT" spacing="40">
                <Label fx:id="tempLabel" styleClass="big-temp" text="--" />
                <VBox spacing="5">
                    <Label fx:id="conditionLabel" style="-fx-text-fill: white; -fx-font-size: 26; -fx-font-weight: bold;" text="Cloudy" />
                    <Label fx:id="feelsLikeLabel" style="-fx-text-fill: #A09EBC;" text="Feels like: --" />
                </VBox>
            </HBox>

            <GridPane hgap="30" vgap="10">
                <VBox GridPane.columnIndex="0">
                    <Label styleClass="detail-label" text="WIND" />
                    <Label fx:id="windLabel" styleClass="detail-value" text="-- mph" />
                </VBox>
                <VBox GridPane.columnIndex="1">
                    <Label styleClass="detail-label" text="HUMIDITY" />
                    <Label fx:id="humidityLabel" styleClass="detail-value" text="-- %" />
                </VBox>
                <VBox GridPane.columnIndex="2">
                    <Label styleClass="detail-label" text="VISIBILITY" />
                    <Label fx:id="visibilityLabel" styleClass="detail-value" text="-- km" />
                </VBox>
                <VBox GridPane.columnIndex="3">
                    <Label styleClass="detail-label" text="PRESSURE" />
                    <Label fx:id="pressureLabel" styleClass="detail-value" text="-- hPa" />
                </VBox>
            </GridPane>
        </VBox>

        <VBox spacing="10" VBox.vgrow="ALWAYS" styleClass="map-container">
            <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="Location Map" />
            <WebView fx:id="mapView" VBox.vgrow="ALWAYS" />
        </VBox>
    </VBox>
</HBox>