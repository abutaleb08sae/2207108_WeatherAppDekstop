<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.chart.*?>

<HBox prefHeight="850.0" prefWidth="1250.0" styleClass="root" stylesheets="@style.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.weatherapp.HelloController">
    <VBox prefWidth="240" minWidth="240" spacing="10" styleClass="sidebar">
        <padding><Insets bottom="20" left="15" right="15" top="30" /></padding>
        <Label style="-fx-text-fill: white; -fx-font-size: 22; -fx-font-weight: bold;" text="WeatherApp" />
        <Region prefHeight="10" />
        <Button maxWidth="Infinity" onAction="#showCurrentScene" styleClass="nav-button" text="â˜€ï¸ Current" />
        <Button maxWidth="Infinity" onAction="#showHourlyScene" styleClass="nav-button" text="ðŸ“… Hourly" />
        <Button maxWidth="Infinity" onAction="#showDetailsScene" styleClass="nav-button-active" text="ðŸ“Š Details" />
        <Button maxWidth="Infinity" onAction="#showMapsScene" styleClass="nav-button" text="ðŸ“ Maps" />
        <Button maxWidth="Infinity" onAction="#showMonthlyScene" styleClass="nav-button" text="ðŸ“… Monthly" />
        <Button maxWidth="Infinity" onAction="#showTrendsScene" styleClass="nav-button" text="ðŸ“ˆ Trends" />
    </VBox>

    <VBox spacing="10" HBox.hgrow="ALWAYS" style="-fx-background-color: #1A1938;">
        <padding><Insets bottom="15" left="20" right="20" top="15" /></padding>

        <HBox alignment="CENTER_LEFT">
            <Label style="-fx-text-fill: white; -fx-font-size: 22; -fx-font-weight: bold;" text="Weather details" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="detailTimeHeader" style="-fx-text-fill: #A09EBC; -fx-font-size: 14;" text="--:-- --" />
        </HBox>

        <GridPane hgap="12" vgap="12" VBox.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints percentWidth="25" /><ColumnConstraints percentWidth="25" />
                <ColumnConstraints percentWidth="25" /><ColumnConstraints percentWidth="25" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="33.3" /><RowConstraints percentHeight="33.3" /><RowConstraints percentHeight="33.3" />
            </rowConstraints>

            <VBox styleClass="detail-tile" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label styleClass="tile-title" text="Temperature" />
                <Label fx:id="detTemp" styleClass="tile-value-big" text="--Â°" />
                <LineChart fx:id="miniTempChart" animated="false" createSymbols="false" legendVisible="false" styleClass="sparkline" maxHeight="60">
                    <xAxis><CategoryAxis side="BOTTOM" opacity="0"/></xAxis>
                    <yAxis><NumberAxis side="LEFT" opacity="0"/></yAxis>
                </LineChart>
                <Label styleClass="tile-sub" text="Temperature variation" />
            </VBox>

            <VBox styleClass="detail-tile" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label styleClass="tile-title" text="Feels like" />
                <Region VBox.vgrow="ALWAYS" />
                <Label fx:id="feelsLikeLabel" styleClass="tile-value-big" text="--Â°" />
                <Label styleClass="tile-sub" text="Apparent temperature" />
                <Region VBox.vgrow="ALWAYS" />
            </VBox>

            <VBox styleClass="detail-tile" GridPane.columnIndex="2" GridPane.rowIndex="0">
                <Label styleClass="tile-title" text="Cloud cover" />
                <Label fx:id="conditionLabel" text="Loading..." styleClass="tile-value" />
                <Label styleClass="tile-sub" text="Sky condition" />
            </VBox>

            <VBox styleClass="detail-tile" GridPane.columnIndex="3" GridPane.rowIndex="0">
                <Label styleClass="tile-title" text="Precipitation" />
                <StackPane prefHeight="50">
                    <Circle radius="25" stroke="#3E3B6E" fill="transparent" strokeWidth="2" />
                    <Label text="0%" styleClass="tile-value" />
                </StackPane>
                <Label styleClass="tile-sub" text="Chance of rain" />
            </VBox>

            <VBox styleClass="detail-tile" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label styleClass="tile-title" text="Wind" />
                <StackPane prefHeight="60">
                    <Circle radius="25" stroke="#3E3B6E" fill="transparent" strokeWidth="1" />
                    <Polygon fx:id="compassNeedle" points="0,0, 4,12, -4,12" fill="#6C5CE7" />
                    <Label text="N" StackPane.alignment="TOP_CENTER" style="-fx-text-fill: white; -fx-font-size: 10;"/>
                </StackPane>
                <Label fx:id="detWind" styleClass="tile-value" text="-- m/s" />
                <Label styleClass="tile-sub" text="Speed" />
            </VBox>

            <VBox styleClass="detail-tile" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Label styleClass="tile-title" text="Humidity" />
                <Label fx:id="detHum" styleClass="tile-value-big" text="--%" />
                <Label fx:id="detDew" text="--Â° Dew point" styleClass="tile-sub" />
            </VBox>

            <VBox styleClass="detail-tile" GridPane.columnIndex="2" GridPane.rowIndex="1">
                <Label styleClass="tile-title" text="UV" />
                <StackPane prefHeight="60">
                    <Arc fx:id="uvArc" length="180" radiusX="35" radiusY="35" startAngle="0" strokeWidth="6" fill="transparent" style="-fx-stroke: #F1C40F;"/>
                    <Label fx:id="detUv" styleClass="tile-value-big" text="--" />
                </StackPane>
                <Label styleClass="tile-sub" text="Index" />
            </VBox>

            <VBox styleClass="detail-tile" GridPane.columnIndex="3" GridPane.rowIndex="1">
                <Label styleClass="tile-title" text="AQI" />
                <StackPane prefHeight="60">
                    <Circle fx:id="aqiCircle" radius="30" stroke="#3E3B6E" strokeWidth="6" fill="transparent" />
                    <Label fx:id="detAqi" styleClass="tile-value-big" text="--" />
                </StackPane>
                <Label fx:id="aqiLabel" styleClass="tile-sub" text="Quality" />
            </VBox>

            <VBox styleClass="detail-tile" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <Label styleClass="tile-title" text="Visibility" />
                <Label fx:id="detailVisibility" styleClass="tile-value-big" text="-- km" />
                <Label styleClass="tile-sub" text="Clarity" />
            </VBox>

            <VBox styleClass="detail-tile" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <Label styleClass="tile-title" text="Pressure" />
                <Label fx:id="detailPressure" text="-- hPa" styleClass="tile-value" />
                <Label styleClass="tile-sub" text="Atmospheric" />
            </VBox>

            <VBox styleClass="detail-tile" GridPane.columnIndex="2" GridPane.rowIndex="2">
                <Label styleClass="tile-title" text="Sun" />
                <StackPane prefHeight="40">
                    <Arc length="180" radiusX="35" radiusY="25" startAngle="0" stroke="#F1C40F" strokeWidth="2" fill="transparent" />
                </StackPane>
                <Label fx:id="timeLabel" text="--:-- --" styleClass="tile-sub" />
            </VBox>

            <VBox styleClass="detail-tile" GridPane.columnIndex="3" GridPane.rowIndex="2">
                <Label styleClass="tile-title" text="Moon phase" />
                <HBox spacing="10" alignment="CENTER">
                    <Circle radius="20" fill="#F1C40F" />
                    <Label fx:id="detMoon" text="--" styleClass="tile-value-big" />
                </HBox>
                <Label styleClass="tile-sub" text="Current phase" />
            </VBox>
        </GridPane>
    </VBox>
</HBox>