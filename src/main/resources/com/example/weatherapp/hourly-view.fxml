<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>

<HBox prefHeight="850.0" prefWidth="1250.0" styleClass="root" stylesheets="@style.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.weatherapp.HelloController">
    <VBox prefWidth="240" minWidth="240" spacing="10" styleClass="sidebar">
        <padding><Insets bottom="20" left="15" right="15" top="30" /></padding>
        <Label style="-fx-text-fill: white; -fx-font-size: 22; -fx-font-weight: bold;" text="WeatherApp" />
        <Region prefHeight="10" />
        <Button maxWidth="Infinity" onAction="#showCurrentScene" styleClass="nav-button" text="â˜€ï¸ Current" />
        <Button maxWidth="Infinity" onAction="#showHourlyScene" styleClass="nav-button-active" text="ðŸ“… Hourly" />
        <Button maxWidth="Infinity" onAction="#showDetailsScene" styleClass="nav-button" text="ðŸ“Š Details" />
        <Button maxWidth="Infinity" styleClass="nav-button" text="ðŸ“ Maps" />
        <Button maxWidth="Infinity" onAction="#showMonthlyScene" styleClass="nav-button" text="ðŸ“… Monthly" />
        <Button maxWidth="Infinity" onAction="#showTrendsScene" styleClass="nav-button" text="ðŸ“ˆ Trends" />

    </VBox>

    <VBox spacing="20" HBox.hgrow="ALWAYS" style="-fx-background-color: #1A1938;">
        <padding><Insets bottom="20" left="30" right="30" top="20" /></padding>

        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label style="-fx-text-fill: white; -fx-font-size: 28; -fx-font-weight: bold;" text="Hourly Forecast" />
            <Region HBox.hgrow="ALWAYS" />
            <TextField fx:id="searchField" onAction="#handleSearch" promptText="Search city..." styleClass="search-field" prefWidth="250" />
        </HBox>

        <ScrollPane fitToHeight="true" pannable="true" style="-fx-background: transparent; -fx-background-color: transparent;" vbarPolicy="NEVER" hbarPolicy="AS_NEEDED">
            <HBox fx:id="hourlyCardsContainer" spacing="15" style="-fx-padding: 10 5 10 5;" />
        </ScrollPane>

        <VBox spacing="15" styleClass="weather-card" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Label style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" text="Temperature Trend (Â°C)" />

            <LineChart fx:id="tempChart" alternativeRowFillVisible="false" createSymbols="true" horizontalGridLinesVisible="true" legendVisible="false" verticalGridLinesVisible="false" VBox.vgrow="ALWAYS">
                <xAxis>
                    <CategoryAxis side="BOTTOM" tickLabelFill="#A09EBC" tickLabelGap="10" />
                </xAxis>
                <yAxis>
                    <NumberAxis forceZeroInRange="false" side="LEFT" tickLabelFill="#A09EBC" />
                </yAxis>
            </LineChart>
        </VBox>

        <HBox spacing="20" alignment="CENTER">
            <VBox alignment="CENTER" styleClass="detail-tile" prefWidth="250" prefHeight="100">
                <Label styleClass="tile-title" text="Highest Today" />
                <Label fx:id="highTempLabel" styleClass="tile-value-big" text="--Â°C" />
            </VBox>
            <VBox alignment="CENTER" styleClass="detail-tile" prefWidth="250" prefHeight="100">
                <Label styleClass="tile-title" text="Lowest Today" />
                <Label fx:id="lowTempLabel" styleClass="tile-value-big" text="--Â°C" />
            </VBox>
        </HBox>
    </VBox>
</HBox>